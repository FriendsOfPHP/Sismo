{
    "name": "sismo/sismo",
    "type": "silex-application",
    "description": "Sismo is a personal continuous integration server.",
    "keywords": ["sismo", "continuous integration"],
    "homepage": "http://sismo.sensiolabs.org",
    "license": "MIT",
    "authors": [
        {
            "name": "Fabien Potencier",
            "email": "fabpot@symfony.com"
        },
        {
            "name": "Sismo Community",
            "homepage": "https://github.com/FriendsOfPhp/sismo/contributors"
        }
    ],
    "require": {
        "php": ">=5.3.3",
        "ext-sqlite3": "*",
        "silex/silex": "~1.0",
        "symfony/console": "~2.3",
        "symfony/twig-bridge": "~2.2",
        "symfony/process": "~2.2",
        "symfony/filesystem": "~2.2",
        "symfony/finder": "~2.2",
        "sensiolabs/ansi-to-html": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "symfony/browser-kit": "~2.3",
        "symfony/css-selector": "~2.3",
        "symfony/dom-crawler": "~2.3",
        "symfony/class-loader": "~2.3"
    },
    "suggest": {
        "jolicode/jolinotif": "Use the best notifier available on your system (Mac, Linux or Windows)",
        "monolog/monolog": "Use Monolog handlers as notifiers"
    },
    "autoload": {
        "psr-0": { "Sismo": "src/" }
    },
    "bin": ["sismo"]
}
